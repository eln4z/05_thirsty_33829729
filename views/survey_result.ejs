<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <title>
        <%= shopName %> - Survey Result
    </title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1>Survey Results</h1>

    <p><strong>Name:</strong>
        <%= first %>
            <%= last %>
    </p>
    <p><strong>Email:</strong>
        <%= email %>
    </p>
    <p><strong>Age:</strong>
        <%= age %>
    </p>
    <p><strong>Favourite Drink Category:</strong>
        <%= drink %>
    </p>
    <p><strong>Student:</strong>
        <%= student==='yes' ? 'Yes' : 'No' %>
    </p>

    <p>Thank you for completing our survey!</p>

    <p><a href="/">Home</a></p>
</body>

</html>